public class Scenario2 {
WebDriver driver = new ChromeDriver();
	
	List<String> listofid = new ArrayList<>();
	
	@BeforeTest
	public void launchurl() {
	

	driver.get("https://practice.expandtesting.com/form-validation");
	driver.manage().window().maximize();
	 WebDriverWait wait = new WebDriverWait(driver, Duration.ofSeconds(5));
     
	}
	
	@Test
	public void addelements() throws InterruptedException {
		
		driver.findElement(By.id("validationCustom01")).sendKeys("");
		Thread.sleep(1000);
		driver.findElement(By.id("validationCustom01")).sendKeys("saikridhna");
		captureScreenshot();
		Thread.sleep(1000);
		driver.findElement(By.id("validationCustom05")).sendKeys("010-1092123");
		//driver.findElement(By.id("validationCustom04")).click();
		captureScreenshot();
		Thread.sleep(1000);
		driver.findElement(By.xpath("//option[@value='card']")).click();
		Thread.sleep(1000);
		captureScreenshot();
		driver.findElement(By.name("pickupdate")).sendKeys("2/9/2002");
		driver.findElement(By.id("validationCustom01")).click();
		Thread.sleep(1000);
		 captureScreenshot();
		
        driver.findElement(By.xpath("//button[@type='submit']")).click();
        Thread.sleep(1000);
        captureScreenshot();
		
		
		
	}
	
	
	public void captureScreenshot() {
	    TakesScreenshot ts = (TakesScreenshot) driver;
	    File source = ts.getScreenshotAs(OutputType.FILE);
	    try {
	        // Ensure the target directory exists
	        File targetDir = new File("/home/zadmin/Desktop/screenshots/");
	        if (!targetDir.exists()) {
	            targetDir.mkdirs();
	        }

	        // Generate timestamp and use it as the test name
	        String timestamp = new SimpleDateFormat("yyyyMMddHHmmss").format(new Date());
	        String testName = "screenshot_" + timestamp;

	        // Create the file with the generated test name and timestamp
	        FileUtils.copyFile(source, new File(targetDir, testName + ".png"));
	        System.out.println("Screenshot taken with name: " + testName);
	    } catch (IOException e) {
	        System.out.println("Exception while taking screenshot: " + e.getMessage());
	    }
	}





}
